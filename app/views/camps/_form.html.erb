<div class="container">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 red-text">
    <% if @camp.errors.any? %>
      <p>Please correct the following errors:</p>
      <ul>
      <% @camp.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= form_for @camp do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :starting_date %>
        <%= f.date_field :starting_date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :ending_date %>
        <%= f.date_field :ending_date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :location_name %>
        <%= f.text_field :location_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :location_street_one %>
        <%= f.text_field :location_street_one, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :location_street_two %>
        <%= f.text_field :location_street_two, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :state %>
        <%#= select_tag :state, options_for_select(us_states), class: 'form-control' %>
        <%= f.select(:state, options_for_select(us_states)) %>
      </div>

      <div class="form-group">
        <%= f.label :zipcode %>
        <%= f.number_field :zipcode, class: 'form-control' %>
      </div>

        <%= f.submit :class => 'btn btn-default' %>
      <% end %>
  </div>
</div>


