<div class="container">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 red-text">
    <% if @testimonial.errors.any? %>
      <p>Please correct the following errors:</p>
      <ul>
        <% @testimonial.errors.full_message.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <%= form_for @testimonial do |f| %>
    <div class="form-group">
      <%= f.label :quote %>
      <%= f.text_area :quote, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-default' %>
    <% end %>
  </div>

</div>
