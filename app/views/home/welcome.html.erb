      <div class="col-xs-4 col-xs-offset-1 align-right">
        <div class="profile-wrap">
        <%= image_tag 'jordan_in_blue.png', id: 'welcome-img' %>
        </div>
      </div>
    </div>

    <div class="col-xs-10 col-xs-offset-1 centered">
        <h1 class="bottom-margin-small">Upcoming Camps</h1>
        <p class="centered">If you are interested in hosting a Wolf Lacrosse Camp, kindly contact <a href="mailto:george@wolflax.com">George Stein</a>.</p>
      <div class="col-xs-7">
        <% @camps.each do |camp| %>
            <h3 class="left-align"><%= camp.city %>, <%= camp.state %></h3>
            <p><%= camp.starting_date.strftime "%A, %B %e" %> - <%= camp.ending_date.strftime "%A %B %e" %></p>
            <p><%= link_to 'Click here for more information', camp_path(camp.id) %></p>
