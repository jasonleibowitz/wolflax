<div class="content-wrap">
  <div class="container-fluid">
    <div class="headline-wrap col-xs-12">
      <div class="headline">
        <h1>Welcome to Wolf Lacrosse</h1>
        <h3>Defining the Future</h3>
      </div>
    </div>
    <div class="hero-img-wrap">
      <%= image_tag 'logo_blue.png', class: 'logo' %>
      <div class="hero-img-overlay"></div>
    </div>
    <div class="nav-wrap red-text">
      <a href="/clinics"><button type="button" class="btn btn-default nav-button"><%= image_tag 'clinic.png', class: 'button-icon' %> <span class="red-text">camps</span></button></a>
      <a href="/about"><button type="button" class="btn btn-default nav-button vcenter"><i class="fa fa-info-circle"></i> <span class="red-text">about</span></button></a>
