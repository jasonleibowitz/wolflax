  <div class="col-xs-10 col-xs-offset-1 bottom-margin">
    <h1 class="centered">All Currently Scheduled Clinics</h1>
  </div>

  <% @clinics.each do |clinic| %>
    <div class="col-xs-10 col-xs-offset-2 bottom-margin">
      <p><span class="bold"><%= clinic.name %></span> - $<%= clinic.price %></p>
      <p>Location: <%= clinic.location_name %></p>
      <p><%= clinic.location_street_one %>, <%= clinic.city %>, <%= clinic.state %></p>
      <p>Spots Taken: <%= clinic.total_spots - clinic.remaining_spots %></p>
      <p>Remaining Slots: <%= clinic.remaining_spots %></p>
      <button class="btn btn-info btn-sm float-left">edit</button>
      <%= button_to "delete", clinic, :method => 'delete', class: 'btn btn-danger btn-sm float-left' %>
    </div>
